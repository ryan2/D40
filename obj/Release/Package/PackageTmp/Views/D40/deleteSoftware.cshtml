@model D40.Models.Software

@{
    ViewBag.Title = "Delete Software";
}

<h2>Delete Software</h2>

<h3>Are you sure you want to delete this? Users with this software will have it removed from their list.</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Software Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            License Key
        </dt>

        <dd>
            @Html.DisplayFor(model => model.license)
        </dd>

        <dt>
            # of Licenses
        </dt>

        <dd>
            @Html.DisplayFor(model => model.num)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "SoftwareIndex", null, htmlAttributes: new { @class = "btn btn-default" })
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
