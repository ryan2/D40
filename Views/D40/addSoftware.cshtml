@model D40.Models.SoftwareName

@{
    ViewBag.Title = "Add Software";
}

<h2>Add Software for @ViewBag.user.First_Name @ViewBag.user.Last_Name</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.Hidden((string)"NameID", (object)ViewBag.user.ID)
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.SoftwareID, "Software", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SoftwareID", (List<SelectListItem>) ViewBag.Software, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SoftwareID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
