@model IEnumerable<D40.Models.Software>

@{
    ViewBag.Title = "Software List";
}

<h2>Software List</h2>

<p>
    @Html.ActionLink("Add Software", "newSoftware",null,htmlAttributes: new { @class = "btn btn-default" })
</p>
@using (Html.BeginForm("SoftwareIndex", "D40", FormMethod.Get))
        {
<p>
    Search User Name: @Html.TextBox("SearchString", (string)ViewBag.search, htmlAttributes: new { @class = "form-control", @style = "display:inline-block" })
    Software Title: @Html.DropDownList("catList", null, "All", htmlAttributes: new { @class = "form-control", @style = "display:inline-block" })
    <input type="submit" value="Search" class="btn btn-default" />
</p>
        }
<table class="table">
    <tr style="background-color:#d9edf7">
        <th>
            Software Title
        </th>
        <th>
            License Key
        </th>
        <th>
            # of Licenses
        </th>
        <th>Users</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.license)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.num)
        </td>
        <td>
            @foreach (D40.Models.SoftwareName sn in item.Users)
            {
                if (sn.Equals(item.Users.Last())){
                    <span>@sn.User.First_Name</span> <span>@sn.User.Last_Name</span>
                }
            else{
                <span>@sn.User.First_Name</span> <span>@sn.User.Last_Name, </span>
            }
            }
        </td>
        <td>
            @Html.ActionLink("Update Software", "updateSoftware", new { id = item.ID }) |
            @Html.ActionLink("Delete Software", "deleteSoftware", new { id = item.ID })
            
        </td>
    </tr>
}

</table>
