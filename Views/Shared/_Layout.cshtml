            <div style="background-color:#e9ebee;min-height:100vh">
                <div class="container body-content">
                 @RenderBody()
                 <hr />
                    <footer>
                        <p>@DateTime.Now.ToString("MM/dd/yyyy") - ASPE Intranet</p>
                     </footer>
                </div>
            </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/bundles/jqueryfloat")
        <script>
            $('div.fluid').parent().addClass("container-fluid");
            $('div.fluid').parent().removeClass("container");
            $(document).ready(function () {
                $(".hide1").click(function () {
                    $(".t1").toggle();
                    $(".floatThead-container").toggle();
                });
            });
            $(document).ready(function () {
                $(".scroll").click(function () {
                    $(".t").toggleClass("scrolldiv")
                    $(".table").toggleClass("inner")
                    $(".fluid2").parent().toggleClass("container-fluid container")
                });
            });
            $(document).ready(function () {
                $('.inner').floatThead({
                    scrollContainer: true
                });
            });
            $(document).ready(function () {
                $(".tog").click(function () {
                    $(this).toggleClass("closeimg openimg")
                    $(this).parent().toggleClass("open")
                    $(this).next(".test").toggle();
                });
            });
        </script>
</body>

</html>
